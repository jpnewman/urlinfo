{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (urls.txt)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt"
            ]
        },
        {
            "name": "Run (1_url.txt)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/1_url.txt"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (urls.txt - No Timeout)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-httpTimeout=0"
            ]
        },
        {
            "name": "Run (urls.txt - 200ms Timeout)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-httpTimeout=200"
            ]
        },
        {
            "name": "Run (urls.txt - Debug)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (no -urlFile)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (HTTP HEAD Method)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-getHeadOny"
            ]
        },
        {
            "name": "Run (Markdown Report)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-reportFormat=Markdown",
                "-reportFile=urlinfo.md"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (DryRun)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-httpTimeout=3000",
                "-dryrun"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (Profiling)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-cpuprofile=./cpu.prof",
                "-memprofile=./mem.prof"
            ]
        },
        {
            "name": "Test (Delve)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "main.go",
            "args": [
                "-test.v"
            ]
        },
        {
            "name": "Test (Delve - Report)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/report/report.go",
            "args": [
                "-test.v"
            ]
        },
        {
            "name": "Benchmark (Delve)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "main.go",
            "args": [
                "-test.v",
                "-test.run=\"^$\"",
                "-test.bench=."
            ]
        },
        {
            "name": "Benchmark (Delve - Report)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/report/report.go",
            "args": [
                "-test.v",
                "-test.run=\"^$\"",
                "-test.bench=."
            ]
        }
    ]
}