    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (urls.txt)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt"
            ]
        },
        {
            "name": "Run (1_url.txt)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/1_url.txt"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (urls.txt - Debug)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (no -urlFile)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (HTTP HEAD Method)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-getHeadOny"
            ]
        },
        {
            "name": "Run (Markdown Report)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-reportFormat=Markdown",
                "-reportFile=urlinfo.md"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (DryRun)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-httpTimeoutSeconds=1",
                "-dryrun"
            ],
            "env": {
                "LOG_LEVEL": "Debug"
            }
        },
        {
            "name": "Run (Profiling)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-urlFile=./_TestData/urls.txt",
                "-cpuprofile=./_OUTPUT/cpu.prof",
                "-memprofile=./_OUTPUT/mem.prof"
            ]
        }
    ]
}